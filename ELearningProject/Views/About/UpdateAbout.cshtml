@model ELearningProject.DAL.Entities.About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateAbout</h2>

<form method="post">
    @Html.HiddenFor(x => x.AboutID, new { @class = "form-control" })
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description1, new { @class = "form-control" })
    <br />
    <br />
    <label>Alt Açıklama</label>
    @Html.TextBoxFor(x => x.Description2, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-outline-success">Kaydet</button>
</form>