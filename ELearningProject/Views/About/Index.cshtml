@model List<ELearningProject.DAL.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Alt Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @if (ViewBag.aboutCount == 0)
    {
        <div class="alert alert-info" role="alert">
            Hakkımızda bilgisi bulunmamaktadır.
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.AboutID</td>
                <td>@item.Title</td>
                <td>@item.Description1</td>
                <td>@item.Description2</td>
                <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    }
</table>
<a href="/About/AddAbout/" class="btn btn-outline-primary">Hakkımızda Bilgisi Ekle</a>