@model ELearningProject.DAL.Entities.Student
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/StudentAdminLayout/Index.cshtml";
}

<div class="row">
    <!-- Column -->
    <div class="col-lg-4 col-xlg-3 col-md-5">
        <!-- Column -->
        @Html.Action("StudentInformationPartial", "StudentProfile")
    </div>
    <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
            <ul class="nav nav-tabs profile-tab" role="tablist">
                <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#home" role="tab">Activity</a> </li>
                <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#profile" role="tab">Profile</a> </li>
                <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#settings" role="tab">Settings</a> </li>
            </ul>
            <div class="tab-content">
                @Html.Action("StudentCommentList", "StudentProfile")
                @Html.Action("StudentProfilePartial", "StudentProfile")

                <div class="tab-pane" id="settings" role="tabpanel">
                    <div class="card-block">
                        <form class="form-horizontal form-material" method="post">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.StudentID)
                                <label class="col-md-12">Ad</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Soyad</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-12">Email</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Password</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button class="btn btn-success">Güncelle</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
