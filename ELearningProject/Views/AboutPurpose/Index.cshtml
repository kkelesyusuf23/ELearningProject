@model List<ELearningProject.DAL.Entities.AboutPurpose>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @if (ViewBag.aboutPurposeCount == 0)
    {
        <div class="alert alert-info" role="alert">
            Amaç bilgisi bulunmamaktadır.
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.AboutPurposeID</td>
                <td>@item.Title</td>
                <td><a href="/AboutPurpose/DeleteAboutPurpose/@item.AboutPurposeID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/AboutPurpose/UpdateAboutPurpose/@item.AboutPurposeID" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    }
</table>
<a href="/AboutPurpose/AddAboutPurpose/" class="btn btn-outline-primary">Amaç Bilgisi Ekle</a>