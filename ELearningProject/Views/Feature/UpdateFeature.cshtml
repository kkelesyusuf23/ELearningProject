@model ELearningProject.DAL.Entities.Feature
@{
    ViewBag.Title = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateFeature</h2>

<form method="post">
    @Html.HiddenFor(x => x.FeatureID)
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <br />
    <label>Alt Başlık</label>
    @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
    <br />
    <br />
    <label>Kısa Açıklama</label>
    @Html.TextBoxFor(x => x.ShortDescription, new { @class = "form-control" })
    <br />
    <br />
    <label>Uzun Açıklama</label>
    @Html.TextBoxFor(x => x.LongDescription, new { @class = "form-control" })
    <br />
    <br />
    <label>Resim</label>
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-outline-success">Kaydet</button>
</form>