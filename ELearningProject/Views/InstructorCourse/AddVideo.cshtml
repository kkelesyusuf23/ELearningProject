@model List<ELearningProject.DAL.Entities.CourseWatchList>
@{
    ViewBag.Title = "AddVideo";
    Layout = "~/Views/InstructorAdminLayout/Index.cshtml";
}

<h2>AddVideo</h2>
<div class="container " style="height: 450px; overflow-x: hidden; overflow-y: scroll; width:100%">
    @foreach (var item in Model)
    {
        <iframe width="410" height="315" src="@item.VideoUrl" title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    }
</div>

<form method="post">
    <input type="hidden" name="CourseID" value="@ViewBag.id" />
    <label>Yeni Video Embed Url Linki</label>
    <input type="text" name="VideoUrl" class="form-control" />
    <br />
    <br />

    <button type="submit" class="btn btn-outline-primary">Videoyu Kaydet</button>
</form>