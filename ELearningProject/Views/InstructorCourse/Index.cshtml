@model List<ELearningProject.DAL.Entities.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/InstructorAdminLayout/Index.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kurs Adı</th>
        <th>Fiyat</th>
        <th>Kategorisi</th>
    </tr>
    @if (ViewBag.ınstructorCourseCount == 0)
    {
        <div class="alert alert-info" role="alert">
            Eğitmene ait kurs bilgisi bulunmamaktadır.
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseID</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    <a href="/InstructorCourse/DeleteInstructorCourse/@item.CourseID" class="btn btn-outline-danger">Sil</a>
                    <a href="/InstructorCourse/UpdateInstructorCourse/@item.CourseID" class="btn btn-outline-success">Güncelle</a>
                    <a href="/InstructorCourse/AddVideo/@item.CourseID" class="btn btn-outline-primary">Video Ekle</a>
                </td>
            </tr>
        }
    }
</table>
