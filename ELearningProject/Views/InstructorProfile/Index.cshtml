@model ELearningProject.DAL.Entities.Instructor
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/InstructorAdminLayout/Index.cshtml";
}

<div class="row" style=" width: 100%; height: 600px; overflow: auto; ">
    <div class="col-lg-4 col-xlg-3 col-md-5">
        <div class="card">
            <div class="card-block">
                <center class="m-t-30">
                    <img src="@Model.ImageURL" class="img-circle" width="150" />
                    <h4 class="card-title m-t-10">@Model.Name @Model.Surname</h4>
                    <h6 class="card-subtitle">@Model.Title</h6>
                </center>
            </div>
        </div>
    </div>

    <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
            <div class="card-block">
                <form class="form-horizontal form-material" method="post">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.InstructorID)
                        <label class="col-md-12">Ad</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Soyad</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Başlık</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Email</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Password</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @id = "passwordField" })
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" onclick="togglePasswordVisibility()" id="showPasswordCheckbox">
                                <label class="form-check-label"style="font-size:15px" for="showPasswordCheckbox">Şifreyi Göster</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Profil Resmi</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Kapak Resmi</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.CoverImage, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>